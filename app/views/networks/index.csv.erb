<%== "\u{feff}" -%>
<%- require 'csv' -%>
<%= %w[
  id
  name
  vlan
  auth
  ipv4_network
  ipv4_gateway
  ipv4_pools
  ipv6_network
  ipv6_gateway
  ipv6_pools
  note
].join(',') %>
<%- @networks.each do |network| -%>
<%==
[
  network.id,
  network.name,
  network.vlan,
  network.auth,
  network.ipv4_network,
  network.ipv4_gateway,
  network.ipv4_pools.map { |pl| [pl.ipv4_config,
                                 pl.ipv4_first_address,
                                 pl.ipv4_last_address] }.to_json,
  network.ipv6_network,
  network.ipv6_gateway,
  network.ipv6_pools.map { |pl| [pl.ipv6_config,
                                 pl.ipv6_first_address,
                                 pl.ipv6_last_address] }.to_json,
  network.note
].to_csv
-%>
<%- end -%>
